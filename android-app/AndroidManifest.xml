<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jadengore.pebblifx"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    

    <application
        android:allowBackup="true"
        android:icon="@drawable/pebblifxlogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jadengore.pebblifx.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jadengore.pebblifx.Preferences"
            android:label="@string/title_activity_preferences" >
        </activity>
	    <receiver android:name="service.PebbLIFXService">  
	        <intent-filter>  
	            <action android:name="android.intent.action.BOOT_COMPLETED" />  
	        </intent-filter>  
	    </receiver>
        <service
            android:enabled="true"
		    android:name="com.jadengore.pebblifx.service.pebblifxservice"
		    android:icon="@drawable/pebblifxlogo"
		    android:label="@string/app_name"
            >
        </service> 
    </application>

</manifest>
